{
  "name": "@entrolytics/redis-client",
  "version": "2.0.0",
  "description": "Redis client for Entrolytics - First-party growth analytics for the edge",
  "keywords": [
    "redis",
    "cache",
    "rate-limiting",
    "analytics",
    "entrolytics"
  ],
  "author": "Entrolytics <hey@ng.entrolytics.click>",
  "license": "MIT",
  "homepage": "https://github.com/entrolytics/redis-client",
  "repository": {
    "type": "git",
    "url": "https://github.com/entrolytics/redis-client.git",
    "directory": "redis-client"
  },
  "bugs": {
    "url": "https://github.com/entrolytics/redis-client/issues"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=24.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "dev": "rollup -c rollup.config.mjs --watch",
    "lint": "biome check .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "debug": "^4.4.3",
    "redis": "^5.10.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/debug": "^4.1.12",
    "@types/node": "^25.0.1",
    "rollup": "^4.53.3",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "typescript": "^5.9.3",
    "vitest": "latest"
  }
}
